├── host.json
├── requirements.txt
├── ResizeImageFunction/
│   ├── __init__.py
│   ├── function.json
└── local.settings.json (optional)

az storage account create --name mystoragefuncapp123 --location eastus2 --resource-group testrg --sku Standard_LRS
